<%- include ('head') %> 
<% if (list.length == 0) { %>
    <h1>YOUR LIST IS EMPTY</h1>
    <a href="/list/new">Add Item</a> 
<% } else{ %>

<h1>YOUR LIST:</h1>
<ul>
    <% for( let item of list ) { %>
        <li><%= item.name %> - <%= item.qty %>  &nbsp; 
            <a href="/list/<%= item.id %>">Show Item</a>
        </li>
    <% } %>
    </ul> &nbsp;
    <a href="/list/new">Add Item</a> 
<% } %>